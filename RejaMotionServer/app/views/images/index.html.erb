<div class="content">
  <div class="container">
    <ul class="thumbnails">
      <% i = 0 %>
      <% @image_list.each do |image| %>
        <%== p '<div class="row-fluid margin_top">' if i.modulo(3) == 0 %>
        <li class="span4">
        <div class="thumbnail">
          <div class="center_horizontal">
            <%= link_to image_tag(image.url), :controller => 'images', :action => 'show', :id => image.id %>
          </div>
          <div class="caption">
            <h3><%= image.title %></h3>
            <p><%= @image_text %></p>
          </div>
        </div>
        </li>
        <%== p '</div>' if i.modulo(3) == 2 or i == @image_list.size %>
        <% i += 1 %>
      <% end %>
    </ul>
  </div>
</div>
